        ohos:width="0"
        ohos:weight="1"
        ohos:background_element="#000000"
        ohos:orientation="vertical"
        ohos:top_margin="5vp"
        ohos:bottom_margin="5vp">
        <DirectionalLayout
            ohos:id="$+id:display_area"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:background_element="#000000"
            ohos:orientation="vertical"
            ohos:top_margin="5vp"
            ohos:bottom_margin="5vp">
