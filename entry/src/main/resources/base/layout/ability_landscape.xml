                ohos:id="$+id:answer_field"
                ohos:width="match_parent"
                ohos:height="match_content"
                ohos:text = "0"
                ohos:text_size="40fp"
                ohos:text_alignment="right"
                ohos:background_element="$graphic:background_lcd"
                />
