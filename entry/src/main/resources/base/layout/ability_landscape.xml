                ohos:id="$+id:question_field"
                ohos:width="match_parent"
                ohos:height="28fp"
                ohos:text = ""
                ohos:text_size="20fp"
                ohos:background_element="$graphic:background_lcd"
                ohos:scrollable="true"
                />
